<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" id="AnchorPane" prefHeight="327.0" prefWidth="493.0" styleClass="page1"
            stylesheets="@../css/login.css" xmlns="http://javafx.com/javafx/8.0.40"
            fx:controller="org.controller.LoginController">
    <children>
        <AnchorPane layoutX="97.0" layoutY="25.0" prefHeight="327.0" prefWidth="493.0" AnchorPane.bottomAnchor="0.0"
                    AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <TextField fx:id="tfUsername" layoutX="132.0" layoutY="133.0" prefHeight="33.0" prefWidth="305.0"
                           promptText="This Username App"/>
                <PasswordField fx:id="tfPassword" layoutX="132.0" layoutY="173.0" onAction="#actionLogin"
                               prefHeight="33.0" prefWidth="305.0" promptText="This Password App"/>
                <Text fx:id="lblWelcome" fill="WHITE" layoutX="49.0" layoutY="75.0" strokeType="OUTSIDE"
                      strokeWidth="0.0" text="Welcome To">
                    <font>
                        <Font name="Segoe UI Light" size="44.0"/>
                    </font>
                </Text>
                <Text fx:id="lblUserLogin" fill="WHITE" layoutX="68.0" layoutY="105.0" strokeType="OUTSIDE"
                      strokeWidth="0.0" text="Student Attedance Management">
                    <font>
                        <Font name="Segoe UI Light" size="24.0"/>
                    </font>
                </Text>
                <Text fx:id="lblUsername" fill="WHITE" layoutX="47.0" layoutY="155.0" strokeType="OUTSIDE"
                      strokeWidth="0.0" text="Username :">
                    <font>
                        <Font name="Segoe UI" size="16.0"/>
                    </font>
                </Text>
                <Text fx:id="lblPassword" fill="WHITE" layoutX="47.0" layoutY="195.0" strokeType="OUTSIDE"
                      strokeWidth="0.0" text="Password  :">
                    <font>
                        <Font name="Segoe UI" size="16.0"/>
                    </font>
                </Text>
                <Button fx:id="btLogin" layoutX="314.0" layoutY="215.0" mnemonicParsing="false" onAction="#actionLogin"
                        prefHeight="33.0" prefWidth="123.0" text="Login"/>
                <Text fx:id="lblAbout" fill="WHITE" layoutX="9.0" layoutY="314.0" strokeType="OUTSIDE" strokeWidth="0.0"
                      text="dangxunb@JavaOhMyGod.wordpress.com">
                    <font>
                        <Font name="Segoe UI" size="12.0"/>
                    </font>
                </Text>
                <Label fx:id="lblClose" layoutX="472.0" layoutY="5.0" text="X" textFill="WHITE">
                    <font>
                        <Font name="Arial Black" size="15.0"/>
                    </font>
                </Label>
                <Hyperlink fx:id="linkForgot" layoutX="132.0" layoutY="221.0" onAction="#forgotPassword"
                           prefHeight="23.0" prefWidth="105.0" text="Forgot Password?" textFill="#16d005"/>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
